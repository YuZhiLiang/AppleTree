<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/navibar_bg_big"
              android:orientation="vertical"
              android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/back"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/btn_back_white"/>

            <RelativeLayout
                android:id="@+id/pingjia_kecheng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">


                <TextView
                    android:id="@+id/pingjia_kecheng_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/btn_menu_pd_green"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="选择课程"
                    android:textColor="@color/myWhite"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pingjia_yizhou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pingjia_yizhou_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/btn_menu_pd_green"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="一周内"
                    android:textColor="@color/myWhite"/>
            </RelativeLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pingjia_viewpager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:background="@color/myGray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@id/group_evaluate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/myWhite"
                android:gravity="center"
                android:text="小组评价"
                android:textColor="@color/textColor"

                android:textSize="18sp"/>

            <Button
                android:id="@id/student_evaluate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/textColor"
                android:gravity="center"
                android:text="学生评价"
                android:textColor="@color/myWhite"

                android:textSize="18sp"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@id/group_or_personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/myWhite">
        </android.support.v4.view.ViewPager>

    </LinearLayout>
</LinearLayout>