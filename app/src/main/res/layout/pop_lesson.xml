<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_popbg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/sexColor"
            android:textSize="16sp"
            android:text="添加课程"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:id="@+id/pop_lesson_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="bottom|center_horizontal"
                android:textAlignment="gravity"
                android:hint="给课程起个名吧（必填）"
                android:textSize="16sp"
                android:textColor="@color/mGray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/pop_lesson_mubiao"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="bottom|center_horizontal"
                    android:textAlignment="gravity"
                    android:hint="填写课程目标吧（可选）"
                    android:textSize="16sp"
                    android:textColor="@color/mGray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/pop_lesson_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/select_create"
            android:textColor="@android:color/white"
            android:text="下一步"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/btn_icon_close_white_n"/>
</LinearLayout>