<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sy.appletree.preparelessons.CreateTaskActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/navibar_bg_big">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/base_left"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/btn_back_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/create_task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:text="备课主题"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/base_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minWidth="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:text="@string/wancheng"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="80dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/creat_task_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="8dp"
            android:background="@drawable/course_no_bg"
            android:textColor="@color/mGray"
            android:hint="输入任务标题"
            android:textColorHint="@color/CCC"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="1dp"
                android:orientation="vertical"
                android:background="@drawable/course_no_bg">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <EditText
                       android:id="@+id/creat_task_content"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@null"
                       android:paddingTop="10dp"
                       android:paddingBottom="10dp"
                       android:hint="输入任务内容"
                       android:gravity="start"
                       android:minHeight="100dp"
                       android:textColorHint="@color/CCC"
                       android:textColor="@color/mGray"/>
                    <com.sy.appletree.views.MyListView
                        android:id="@+id/link_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:layout_marginTop="10dp"/>
                   <com.sy.appletree.views.MyGridView
                       android:id="@+id/link_text"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="30dp"
                       android:numColumns="4"
                       android:columnWidth="80dp"
                       android:stretchMode="columnWidth"
                       android:verticalSpacing="10dp"
                       android:horizontalSpacing="8dp"/>

                   <com.sy.appletree.views.MyListView
                       android:id="@+id/tianjia_pj_list"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scrollbars="none"
                       android:layout_marginTop="30dp"
                       android:layout_marginBottom="30dp"/>
               </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/creat_task_addFJ"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/F2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:drawablePadding="10dp"
                            android:text="添加附件"
                            android:drawableLeft="@mipmap/icon_tjfu"
                            android:textColor="@color/textColor"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/creat_task_addPJ"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/F2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/textColor"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@mipmap/icon_tjpj"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text="添加评价"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/creat_task_del"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="删除此任务"
            android:background="@drawable/select_beike_btn_press"/>
    </LinearLayout>
</RelativeLayout>
