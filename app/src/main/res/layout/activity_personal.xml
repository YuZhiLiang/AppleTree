<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sy.appletree.login_register.PersonalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <EditText
            android:id="@+id/personal_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入您的姓名"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textColorHint="@android:color/darker_gray"/>
       <RadioGroup
           android:id="@+id/personal_sex"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_alignParentBottom="true">
           <RadioButton
               android:id="@+id/personal_man"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="男"
               android:textColor="@color/sexColor"
               android:textSize="22sp"/>
           <RadioButton
               android:id="@+id/personal_woman"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="女"
               android:textColor="@color/sexColor"
               android:textSize="22sp"/>
       </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <Button
            android:id="@+id/personal_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:text="@string/register_next"
            android:textColor="@android:color/white"
            android:background="@drawable/select_register_next"/>
    </RelativeLayout>
</LinearLayout>
