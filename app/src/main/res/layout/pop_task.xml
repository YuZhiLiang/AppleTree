<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_popbg">
        <TextView
            android:id="@+id/pop_task_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/sexColor"
            android:textSize="16sp"
            android:text="添加附件内容"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/mGray"
                        android:textSize="15sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="添加文件链接地址"/>
                    <Button
                        android:id="@+id/zhantie"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:text="粘贴"
                        android:textColor="@color/textColor"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/pop_task_link"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/mGray"
                    android:background="@drawable/course_no_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mGray"
                    android:layout_marginTop="20dp"
                    android:text="添加图片"/>
                <ImageButton
                    android:id="@+id/pop_task_img"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/course_no_bg"
                    android:src="@mipmap/icon_tj_green_n"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/pop_task_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/select_create"
            android:textColor="@android:color/white"
            android:text="@string/wancheng"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/btn_icon_close_white_n"/>
</LinearLayout>