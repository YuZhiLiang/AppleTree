<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/shouye_kemu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_kenu"
                android:focusable="false"
                android:text="语"
                android:textColor="@android:color/white"
                android:textSize="30sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/shouye_mingcheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/textColor"
                    android:text="2016小学语文三年级下册"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/shouye_nianji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:text="小学三年级"/>
                <TextView
                    android:id="@+id/shouye_banben"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:text="人教版"/>
                <TextView
                    android:id="@+id/shouye_shijian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:text="2016.10.30"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/shouye_zhiku"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:focusable="false"
                    android:text="原创"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:background="@drawable/shape_yuanchuang"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>