<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="350dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_popbg">
        <TextView
            android:id="@+id/querentuichu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mGray"
            android:text="确定退出？"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/pop_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/querentuichu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:text="深圳第一实验小学"/>
        <TextView
            android:id="@+id/pop_banji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pop_school"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:text="一年级三班"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="保存"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:background="@drawable/select_create"/>
            <Button
                android:id="@+id/abandon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:text="放弃"
                android:background="@drawable/select_abandon"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>